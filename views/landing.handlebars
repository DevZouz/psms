{{> home/home-nav}}
<body class="bkg-col">
  <!-- Page Content -->
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-12 d-flex justify-content-center">
        <h1 class="mt-4">Welcome, {{ user.displayName }}</h1>
      </div>
      <div class="col-md-12 col-12 d-flex justify-content-center">
        <p>Get ready to create the soundtrack to you life!</p>
      </div>
    </div>
  </div>
 <!-- user profile display -->
  <div class="container">
    <div class="row">
      <div class="col-md-12 d-flex justify-content-center">
      {{#if  user.photos  }}
      <img class="user-image" src={{ user.photos }}>
      {{else}}
      <p> You have no image - shame :)</p>>
      {{/if}}
      </div>
      <div class="col-md-12 d-flex justify-content-center">
        <h2 class="user-header">{{ user.id }} </h2>
      </div>
      <div class="col-md-12 d-flex justify-content-center">
        <button class="btn-main"><a href=" {{ user.profileUrl }}" target="_blank">View Spotify Profile</a></button>
      </div>
      <div class="col-md-4 col-4">
        <p class="profile-details">Followers</p>
      </div>
        <div class="col-md-4 col-4">
          <p class="profile-details">Email </p>
        </div>
      <div class="col-md-4 col-4">
        <p class="profile-details">Country </p>
      </div>
      <div class="col-md-4 col-4">
        <p class="profile-details">{{ user.followers }}</p>
      </div>
        <div class="col-md-4 col-4">
          <p class="profile-details">{{ user._json.email }} </p>
        </div>
      <div class="col-md-4 col-4">
        <p class="profile-details">{{ user.country }} </p>
      </div>
      </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-12 col-12">
          {{#if playlists}}
            <form method="get" action="/spotify/search_tracks">      
              <fieldset>      
                <legend class="playlist-header">Spotify Playlists:</legend> 
                <p class="playlist-details">please select which playlist best represents your current state</p> 
                  {{#each playlists}}
                    {{> spotify_playlists-block }}
                  {{/each}}       
                  <br>      
                  <button class="btn-main" type="submit">Search Playlists</button>      
              </fieldset>      
            </form> 
          {{/if}}
        </div>
        <div class="col-md-12 col-12">
      {{#if spotify_tracks}}
      <form method="post" action="/spotify/save_tracks">   
        <fieldset class="col-md-12 text-center">      
          <legend class="playlist-header">Tracks:</legend>
            <p class="playlist-details">select your playlist tracks</p> 
            {{#each spotify_tracks}}
            {{> spotify_tracks-block }}
            {{/each}}       
            <br>
            <button class="submitToDatabase btn-main" type="submit" value="Add tracks to the playlist">Add tracks to Playlist</button> 
            {{!-- <input type="submit" value="Add tracks to the playlist" />       --}}
            <button class="submitToDatabase btn-main" type="submit" value="Save to your Spotify">Save Playlist to Spotify Account</button> 
        </fieldset>      
      </form>
      {{/if}}
        </div>
      </div>
    </div>
{{#if message }}
<form method="post" action="/spotify/save_tracks">      
    <fieldset>      
        <p>{{ message }}</p>  
        <br>         
    </fieldset>      
</form>
{{/if}}
      {{#if localdb_tracks }}
      <form method="get" action="/spotify/sync">      
        <fieldset>      
          <legend>My tracks:</legend>  
            <ul class="w3-ul ">
              {{#each localdb_tracks}}
              {{> localdb_tracks-block }}
              {{/each}}    
            </ul>      
    </fieldset>        
</form>
{{/if}}  
<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
  <form action="/local/display_playlists" method="GET">
    <button class="btn-main" type=submit>My Playlists</button>
</form>
<form action="/spotify/search_playlists" method="GET">
    <button class="btn-main" type=submit>Spotify playlists</button>
</form>
</div>
  </div>
</div>
