<div class="container">
    <div class="card card-login mx-auto mt-5">
      <div class="card-header"><h1>Register</h1></div>
      <div class="card-body">
        <form action="/register" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" id="name" type="text" placeholder="Enter email" required>
          </div>
          <div class="form-group">
            <label for="email">Email address</label>
            <input class="form-control" id="email" type="email" aria-describedby="emailHelp" placeholder="Enter email" required>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input class="form-control" id="password" type="password" placeholder="Password" required>
          </div>
          <div class="form-group">
            <div class="form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="checkbox"> Remember Password</label>
            </div>
          </div>
          <button class="btn btn-primary" type="submit"><a href="/local/login">Register</a></button>
        </form>
